 #!/usr/bin/with-contenv bash
echo "*** ARDUINO Installer ***"
echo "Checking if arduino is installed"
if ! arduino --version &> /dev/null; then
    echo "ARDUINO not installed, installing now..."
    if ! curl --version  &> /dev/null; then
        echo "curl not installed, installing now..."
        apt-get install curl -y
    fi
    curl -OL 'https://downloads.arduino.cc/arduino-1.8.19-linux64.tar.xz'
    tar -xf arduino-1.8.19-linux64.tar.xz
    rm arduino-1.8.19-linux64.tar.xz
    cd arduino-1.8.19
    ./install.sh
else
    echo "arduino already installed, skipping!"
fi
